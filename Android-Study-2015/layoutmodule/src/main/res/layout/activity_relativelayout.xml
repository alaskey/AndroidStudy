<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/holo_blue_light"
        android:text="morning" />

    <TextView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_above="@id/tvMain"
        android:background="@android:color/holo_green_light"
        android:text="above" />

    <TextView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_below="@id/tvMain"
        android:background="@android:color/holo_green_light"
        android:text="below" />

    <TextView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_toLeftOf="@id/tvMain"
        android:background="@android:color/holo_green_light"
        android:text="to Left Of" />

    <TextView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_toRightOf="@id/tvMain"
        android:background="@android:color/holo_green_light"
        android:text="to Right Of" />



    <TextView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_orange_light"
        android:text="Parent Top" />


    <TextView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_orange_light"
        android:text="Parent Bottom" />

    <TextView
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:background="@android:color/holo_purple"
        android:text="parent Left" />

    <TextView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_orange_light"
        android:text="parent Right" />
</RelativeLayout>